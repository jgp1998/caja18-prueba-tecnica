@model IEnumerable<caja18_prueba_tecnica.Models.DeviceDetailsViewModel>

@{
	ViewData["Title"] = "Dispositivos";
}

<div class="container mt-4">
	<h1 class="mb-4">@ViewData["Title"]</h1>

	@if (!Model.Any())
	{
		<div class="alert alert-info">
			No se encontraron dispositivos.
		</div>
	}
	else
	{
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
			@foreach (var device in Model)
			{
				<div class="col">
					<div class="card h-100 shadow-sm">
						<div class="card-body">
							<h5 class="card-title">@device.Name</h5>
							
							<div class="device-info">
								<p class="mb-1">
									<strong>Precio:</strong>
									@if (string.IsNullOrEmpty(device.Price) || device.Price == "0")
									{
										<span class="text-muted">Precio No Disponible</span>
									}
									else
									{
										<span>$@device.Price</span>
									}
								</p>

							</div>
						</div>
						<div class="card-footer bg-transparent">
							<a asp-action="Details" asp-route-id="@device.Id" class="btn btn-primary">
								<i class="fas fa-info-circle"></i> Ver Detalles
							</a>
						</div>
					</div>
				</div>
			}
		</div>
	}
</div>

@section Styles {
	<style>
		.device-info {
			font-size: 0.9rem;
		}
		
		.card {
			transition: transform 0.2s;
		}
		
		.card:hover {
			transform: translateY(-5px);
		}
		
		.badge {
			font-size: 0.8rem;
		}
	</style>
}